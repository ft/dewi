. @@LIBDIR@@/shell.sh
if [ ! -r @@LIBDIR@@/genshell.sh ]; then
    die 'Please run generate.sh first. See README for details.'
    exit 1
fi
. @@LIBDIR@@/genshell.sh

for dir in *; do
    [ ! -d "$dir" ] && continue
    if __is_dewified "$dir"; then
    (
        cd "$dir" || exit 1
        make "$@" || exit 1
    ) || exit 1
    fi
done
exit 0

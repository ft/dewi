d=".dewi/lib"
. "$d"/shell.sh

echo "inall.sh: make" "$@"
for dir in *; do
    [ ! -d "$dir" ] && continue
    if __is_dewified "$dir"; then
    (
        cd "$dir" || exit 1
        printf '  + "%s"\n' "$dir"
        make "$@" || exit 1
    ) || exit 1
    fi
done
exit 0
